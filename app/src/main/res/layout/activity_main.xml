<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lalith.bookrental.MainActivity"
    android:background="#180202">

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:src="@drawable/splashr"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="15dp"
        android:text="Book Rental App"
        android:textColor="#cb1010"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="By Developer Student Clubs"
        android:textColor="#cb1010"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

</RelativeLayout>
